@model IEnumerable<CarRentProjectCore.Models.Customer.CustomerViewModel>

@{
    ViewData["Title"] = "List of Customer";
}

<h1>Customer List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table id="example" class="table table-bordered table-striped table-hover">
    <thead class="text-center">
        <tr>
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            var sl = 0;
        }
        @foreach (var item in Model)
        {
            sl++;
            <tr>
                <td>
                    @sl
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <thead class="text-center">
        <tr>
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
</table>
@section scripts
    {

    <script src="~/project Script/projectScript.js"></script>
}
